{
  "author": {
    "email": "hello@danielconstantin.net",
    "name": "Daniel Constantin"
  },
  "name": "@privatefolio/commons",
  "sideEffects": false,
  "exports": {
    "./*": {
      "import": "./src/*.ts",
      "require": "./build/cjs/*.js"
    },
    "./package.json": "./package.json",
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./tsconfig.cjs.json": "./tsconfig.cjs.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "src/*"
      ]
    }
  },
  "dependencies": {
    "@logtape/file": "^1.0.4",
    "@logtape/logtape": "^1.0.4",
    "@logtape/pretty": "^1.1.0-dev.324",
    "@logtape/redaction": "^1.0.4"
  },
  "description": "Common libraries to build privatefolio extensions.",
  "homepage": "https://privatefolio.xyz",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "16",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "typescript": "^5.6.0"
  },
  "keywords": [
    "privatefolio",
    "commons",
    "extension",
    "extensions"
  ],
  "license": "AGPL-3.0",
  "version": "2.0.0-beta.47",
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc --project tsconfig.cjs.json",
    "build:watch": "tsc --project tsconfig.cjs.json --watch --preserveWatchOutput",
    "dev": "yarn build:watch",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "check-types": "tsc --noEmit"
  }
}
