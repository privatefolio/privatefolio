{
  "author": {
    "email": "hello@danielconstantin.net",
    "name": "Daniel Constantin"
  },
  "dependencies": {
    "electron-log": "^5.1.5",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "update-electron-app": "^3.1.1"
  },
  "description": "Desktop version of Privatefolio.",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@types/electron-squirrel-startup": "^1.0.0",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "concurrently": "^9.0.1",
    "electron": "^36.3.2",
    "electron-icon-builder": "^2.0.1",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "17",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "main": "./build/start.js",
  "name": "privatefolio-electron",
  "private": true,
  "productName": "Privatefolio",
  "scripts": {
    "build": "tsc",
    "build-bin:linux": "electron-forge make -p linux --arch=x64",
    "build-bin:mac": "electron-forge make -p darwin --arch=x64,arm64",
    "build-bin:win": "electron-forge make -p win32 --arch=x64",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "check-types": "tsc --noEmit",
    "check-types:watch": "yarn check-types --watch --preserveWatchOutput",
    "dev": "concurrently \"yarn build:watch\" \"electron-forge start\" --kill-others --restart-tries 1 --restart-after 500 --prefix \"{command}\" --prefix-colors \"blue,cyan\" --prefix-length 30",
    "gen-icons": "bun ./generate-icons.sh",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "package:linux": "electron-forge package -p linux --arch=x64",
    "package:mac": "electron-forge package -p darwin --arch=x64,arm64",
    "package:win": "electron-forge package -p win32 --arch=x64",
    "postbuild": "yarn gen-icons",
    "postbuild-bin:linux": "bash ./postbuild-bin.sh",
    "postbuild-bin:mac": "bash ./postbuild-bin.sh",
    "postbuild-bin:win": "bash ./postbuild-bin.sh",
    "postpackage:linux": "bash ./postbuild-bin.sh",
    "postpackage:mac": "bash ./postbuild-bin.sh",
    "postpackage:win": "bash ./postbuild-bin.sh",
    "prebuild": "rm -rf ./build",
    "prebuild-bin:linux": "bash ./prebuild-bin.sh",
    "prebuild-bin:mac": "bash ./prebuild-bin.sh",
    "prebuild-bin:win": "bash ./prebuild-bin.sh",
    "prepackage:linux": "bash ./prebuild-bin.sh",
    "prepackage:mac": "bash ./prebuild-bin.sh",
    "prepackage:win": "bash ./prebuild-bin.sh"
  },
  "version": "2.0.0-alpha.30"
}
