{
  "author": {
    "email": "hello@danielconstantin.net",
    "name": "Daniel Constantin"
  },
  "dependencies": {
    "@logtape/file": "^1.0.4",
    "@logtape/logtape": "^1.0.4",
    "@logtape/pretty": "^1.1.0-dev.324",
    "@privatefolio/node-commons": "^2.0.0-beta.38",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2"
  },
  "description": "Desktop version of Privatefolio.",
  "homepage": "https://privatefolio.xyz",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-builder": "26.0.12",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "16",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "typescript": "^5.6.0"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "main": "./build/start.js",
  "name": "privatefolio-electron",
  "private": true,
  "productName": "Privatefolio",
  "scripts": {
    "build": "tsc",
    "build-bin:linux": "electron-builder --config builder.config.ts --linux --x64",
    "build-bin:mac": "electron-builder --config builder.config.ts --mac --x64 --arm64",
    "build-bin:win": "electron-builder --config builder.config.ts --win --x64",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "check-types": "tsc --noEmit",
    "check-types:watch": "yarn check-types --watch --preserveWatchOutput",
    "dev": "concurrently \"yarn build:watch\" \"yarn electron:watch\" --kill-others --prefix \"{command}\" --prefix-colors \"blue,cyan\" --prefix-length 30",
    "gen-icons": "bun ./generate-icons.sh",
    "electron:watch": "nodemon --watch build --delay 200ms --exec electron ./build/start.js",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "package:linux": "electron-builder --config builder.config.ts --linux --x64 --dir",
    "package:mac": "electron-builder --config builder.config.ts --mac --x64 --arm64 --dir",
    "package:win": "electron-builder --config builder.config.ts --win --x64 --dir",
    "postbuild": "yarn gen-icons",
    "prebuild": "rm -rf ./build",
    "prebuild-bin:linux": "bash ./prebuild-bin.sh",
    "prebuild-bin:mac": "bash ./prebuild-bin.sh",
    "prebuild-bin:win": "bash ./prebuild-bin.sh",
    "prepackage:linux": "bash ./prebuild-bin.sh",
    "prepackage:mac": "bash ./prebuild-bin.sh",
    "prepackage:win": "bash ./prebuild-bin.sh"
  },
  "version": "2.0.0-beta.38"
}
