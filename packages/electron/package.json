{
  "author": {
    "email": "hello@danielconstantin.net",
    "name": "Daniel Constantin"
  },
  "dependencies": {
    "@privatefolio/commons-node": "^2.0.0-beta.44",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  },
  "description": "Desktop version of Privatefolio.",
  "homepage": "https://privatefolio.xyz",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "concurrently": "^9.2.0",
    "electron": "^37.1.0",
    "electron-builder": "26.0.12",
    "electron-icon-builder": "^2.0.1",
    "nodemon": "^3.1.10"
  },
  "keywords": [],
  "license": "AGPL-3.0",
  "main": "./build/start.js",
  "name": "privatefolio-electron",
  "private": true,
  "productName": "Privatefolio",
  "scripts": {
    "prebuild": "rm -rf ./build",
    "build": "tsc",
    "build:watch": "tsc --watch --preserveWatchOutput",
    "postbuild": "yarn gen-icons",
    "gen-icons": "bun ./generate-icons.sh",
    "check-types": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "electron:watch": "nodemon --watch build --delay 200ms --exec electron ./build/start.js",
    "dev": "concurrently \"yarn build:watch\" \"yarn electron:watch\" --kill-others --prefix \"{command}\" --prefix-colors \"blue,cyan\" --prefix-length 30",
    "prebuild-bin:linux": "bash ./prebuild-bin.sh",
    "prebuild-bin:mac": "bash ./prebuild-bin.sh",
    "prebuild-bin:mac-x64": "bash ./prebuild-bin.sh",
    "prebuild-bin:win": "bash ./prebuild-bin.sh",
    "build-bin:linux": "electron-builder --config builder.config.ts --linux --x64",
    "build-bin:mac": "electron-builder --config builder.config.ts --mac --arm64",
    "build-bin:mac-x64": "electron-builder --config builder.config.ts --mac --x64",
    "build-bin:win": "electron-builder --config builder.config.ts --win --x64",
    "package:linux": "yarn build-bin:linux --dir",
    "package:mac": "yarn build-bin:mac --dir",
    "package:win": "yarn build-bin:win --dir"
  },
  "version": "2.0.0-beta.44"
}
