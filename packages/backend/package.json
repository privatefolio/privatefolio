{
  "name": "privatefolio-backend",
  "version": "2.0.0-alpha.9",
  "private": false,
  "license": "AGPL-3.0",
  "author": {
    "name": "Daniel Constantin",
    "email": "hello@danielconstantin.net"
  },
  "scripts": {
    "start": "bun ./scripts/start.sh",
    "prestart:watch": "bun ./scripts/prestart-watch.sh",
    "start:watch": "bun ./scripts/start-watch.sh",
    "dev": "bun ./scripts/dev.sh",
    "ping": "bun src/ping.ts",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "prebuild": "rm -rf build",
    "build": "tsc --project tsconfig.lib.json && vite build",
    "build:watch": "tsc --project tsconfig.lib.json --watch --preserveWatchOutput",
    "check-types": "tsc --noEmit",
    "test": "cross-env BUN_SQL=false vitest run --watch false",
    "test:bun": "cross-env BUN_SQL=true bun test test/bun/**",
    "test:ci": "cross-env GITHUB_CI=true BUN_SQL=false vitest run --watch false --reporter verbose && cross-env BUN_SQL=true yarn test:bun",
    "docker:build": "docker build --progress=plain --build-arg PORT_ARG=${PORT:-5555} --build-arg APP_VERSION_ARG=\"`npm pkg get version`\" --build-arg GIT_HASH_ARG=`git rev-parse HEAD` --build-arg GIT_DATE_ARG=`git show -s --format=%cI $(git rev-parse HEAD)` -t privatefolio -f Dockerfile ../..",
    "docker:run": "docker run -d -p ${PORT:-5555}:${PORT:-5555} -v privatefolio-data:/app/data --name privatefolio privatefolio",
    "docker:remove": "docker rm -f privatefolio"
  },
  "dependencies": {
    "big.js": "^6.2.1",
    "chalk": "^5.3.0",
    "croner": "^9.0.0",
    "ethers": "^6.9.0",
    "exponential-backoff": "^3.1.1",
    "jose": "^6.0.10",
    "jszip": "^3.10.1",
    "lodash-es": "^4.17.21",
    "mime-types": "^2.1.35",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.2",
    "@types/bun": "^1.1.6",
    "@types/chalk": "^2.2.0",
    "@types/lodash-es": "^4.17.12",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^9.0.1",
    "cross-env": "7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "16",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vitest": "^0.5.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5",
    "vite": "^6.2.2",
    "vitest": "^3.0.8"
  }
}
