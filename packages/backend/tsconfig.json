// https://www.npmjs.com/package/@tsconfig/bun
{
  "compilerOptions": {
    /*  Enable latest features */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleDetection": "force",
    "allowJs": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    // "resolveJsonModule": true,
    // "verbatimModuleSyntax": true,
    "noEmit": true,

    /* Linting */
    "skipLibCheck": true,
    // "strict": true,
    "noFallthroughCasesInSwitch": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noPropertyAccessFromIndexSignature": true,

    /* Custom */
    "outDir": "build", // even if noEmit is true, this is needed for correct intellisense
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
