{
  "name": "privatefolio",
  "version": "n/a",
  "private": true,
  "license": "AGPL-3.0",
  "author": {
    "name": "Daniel Constantin",
    "email": "hello@danielconstantin.net"
  },
  "homepage": "https://privatefolio.xyz",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "privatefolio-electron/**",
      "privatefolio-expo/**"
    ]
  },
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "clean": "git clean -fxd -e data",
    "build": "lerna run build",
    "dev": "lerna run --parallel --stream dev --ignore=privatefolio-electron --ignore=privatefolio-expo",
    "dev:electron": "lerna run --parallel --stream dev --ignore=privatefolio-expo",
    "dev:expo": "lerna run --parallel --stream dev --ignore=privatefolio-electron",
    "test": "lerna run --parallel test",
    "test:ci": "lerna run --parallel test:ci",
    "check-types": "lerna run --parallel check-types",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint:fix",
    "prebundle:win": "cross-env VITE_TARGET=electron yarn build",
    "prebundle:linux": "cross-env VITE_TARGET=electron yarn build",
    "prebundle:mac": "cross-env VITE_TARGET=electron yarn build",
    "prebundle:mac-x64": "cross-env VITE_TARGET=electron yarn build",
    "bundle:win": "lerna run bundle:win",
    "bundle:linux": "lerna run bundle:linux",
    "bundle:mac": "lerna run bundle:mac",
    "bundle:mac-x64": "lerna run bundle:mac-x64",
    "bundle:android": "lerna run bundle:android",
    "bundle:ios": "lerna run bundle:ios",
    "new-version": "lerna version --force-publish",
    "docker:build": "yarn workspace privatefolio-backend docker:build",
    "docker:run": "yarn workspace privatefolio-backend docker:run",
    "docker:remove": "yarn workspace privatefolio-backend docker:remove",
    "preview-docs": "yarn workspace @privatefolio/docs preview"
  },
  "devDependencies": {
    "wrangler": "^4.35.0",
    "cross-env": "10.0.0",
    "lerna": "^8.1.3"
  }
}
